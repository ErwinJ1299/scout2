{
  "name": "anomaly-detector-lambda",
  "version": "1.0.0",
  "description": "AWS Lambda function for health data anomaly detection",
  "main": "dist/handler.js",
  "scripts": {
    "build": "tsc",
    "package": "npm run build && zip -r function.zip dist node_modules",
    "deploy": "aws lambda update-function-code --function-name anomaly-detector --zip-file fileb://function.zip"
  },
  "dependencies": {
    "@aws-sdk/client-sns": "^3.450.0",
    "firebase-admin": "^12.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
